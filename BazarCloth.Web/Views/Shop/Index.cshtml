
@using BazarCloth.Web.Models.ViewModels;
@model BazarCloth.Web.Models.ViewModels.ShopGalleryViewModel

@{
    ViewBag.Title = "Index";

    var ImageUrl = "/Content/noimage.png";

}

<section class="flat-row main-shop shop-slidebar">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar slidebar-shop">
                    <div class="widget widget-search">
                        <form method="get" class="search-form" action="@Url.Action("Index","Shop")">
                            <label>
                                <input type="search" class="search-field" placeholder="Search …" value="" name="sreachProduct">
                            </label>
                            <input type="submit" class="search-submit " value="Search">
                        </form>
                    </div><!-- /.widget-search -->
                    <div class="widget widget-sort-by">
                        <h5 class="widget-title">
                            Sort By
                        </h5>
                        <ul>
                            <li><a href="@Url.Action("Index","Shop",new { SortBy=(int)SortByEnum.Default , CataId=Model.cataId})" class="@(Model.SortBy.HasValue? Model.SortBy.Value==(int)SortByEnum.Default ?"active":string.Empty:string.Empty)">Default-Latest</a></li>
                            <li><a href="@Url.Action("Index","Shop",new { SortBy=(int)SortByEnum.Popularity , CataId=Model.cataId})" class="@(Model.SortBy.HasValue? Model.SortBy.Value==(int)SortByEnum.Popularity ?"active":string.Empty:string.Empty)">Popularity</a></li>
                            <li><a href="@Url.Action("Index","Shop",new { SortBy=(int)SortByEnum.lowToHigh , CataId=Model.cataId})" class="@(Model.SortBy.HasValue? Model.SortBy.Value==(int)SortByEnum.lowToHigh ?"active":string.Empty:string.Empty)">Price: low to high</a></li>
                            <li><a href="@Url.Action("Index","Shop",new { SortBy=(int)SortByEnum.highToLow , CataId=Model.cataId})" class="@(Model.SortBy.HasValue? Model.SortBy.Value==(int)SortByEnum.highToLow ?"active":string.Empty:string.Empty)">Price: high to low</a></li>
                        </ul>
                    </div><!-- /.widget-sort-by -->


                    <div class="widget widget_tag">
                        <h5 class="widget-title">
                            Tags
                        </h5>
                        <div class="tag-list">

                            @foreach (var catagory in Model.FeaturedCatagories)
                            {

                                <a href="@Url.Action("Index","Shop",new { CataId=catagory.Id,SortBy=Model.SortBy})" class="@(Model.cataId.HasValue && Model.cataId== catagory.Id?"active":string.Empty)">@catagory.Name</a>
                            }
                        </div>
                    </div>
                <!-- /.widget -->
                    <div class="widget widget-price">
                        <h5 class="widget-title">Filter by price</h5>
                        <div class="price-filter">
                            <div id="slide-range"></div>
                            <p class="amount">
                                Price: <input type="text" id="amount" disabled="">
                            </p>
                        </div>
                        <a class="btn btn-danger" href="@Url.Action("Index","Shop")">Reset-Filters</a>
                    </div>
                </div><!-- /.sidebar -->
            </div><!-- /.col-md-3 -->
            <div class="col-md-9">
             
                @*Apply the Partial View here for show the Product*@

                <div id="ProductDiv">
                    @{

                        var product = new ShopGalleryFilterViewModel();
                        product.Products = Model.Products;
                        product.Pager = Model.Pager;
                        product.SortBy = Model.SortBy;
                        product.cataId = Model.cataId;

                        Html.RenderPartial("FilterSearch", product);
                    }
                </div>
             
            </div><!-- /.col-md-9 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.flat-row -->


<script>

    var callTimeOut;
    var priceSlider = $("#slide-range").slider({

        range: true,
        min: 0,
        max:@Model.MaximumPrice,
        values: [0,@Model.MaximumPrice],
        slide: function (event, ui) {
            var minPrice = ui.values[0];
            var maxPrice = ui.values[1];
            $("#amount").val("$" + minPrice + ".00" + " - $" + maxPrice + ".00");

            clearTimeout(callTimeOut);

            callTimeOut = setTimeout(PriceRangeChange, 500);

        }
    });



    function PriceRangeChange() {

        console.log("Called");
        $.ajax(
            {
                url: '@Url.Action("FilterSearch","Shop")',
                data: {
                    CataId: '@Model.cataId',
                    SortBy:'@Model.SortBy',
                    MinimumPrice: priceSlider.slider("values", 0),
                    MaximumPrice: priceSlider.slider("values", 1)
                }
            }).done(function (result) {
                $("#ProductDiv").html(result);
            }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAIL");
            });
    }
</script>





