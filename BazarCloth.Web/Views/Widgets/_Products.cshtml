@model BazarCloth.Web.Models.ViewModels.ProdcutListViewNodel


@{

    var ImageUrl = "/Content/noimage.png";
}

@if (Model != null && Model.Products != null)
{
    if (!Model.isLastetProduct)
    {

        <ul class="flat-filter style-1 text-center max-width-682 clearfix">

            <li class="active"><a href="#" data-filter="*">All Product</a></li>

            @foreach (var catagory in Model.Products.Select(x => x.Catagory).ToList().Distinct())
            {

                <li><a href="#" data-filter=".@catagory.Name.ToLower().Replace(" ",string.Empty)">@catagory.Name's</a></li>
            }
        </ul>
    }   


    <div class="product-content product-fourcolumn clearfix">
        <ul class="product style2 isotope-product clearfix">

            @foreach (var pro in Model.Products)
            {
                string imgSrc = !string.IsNullOrEmpty(pro.ImageUrl) ? pro.ImageUrl : ImageUrl;
                <li class="product-item  @pro.Catagory.Name.ToLower().Replace(" ",string.Empty)">
                    <div class="product-thumb clearfix">
                        <a href="@Url.Action("Details","Product",new { id=pro.Id})" class="product-thumb">
                            <img src="@imgSrc" alt="image" style="height:200px">
                        </a>
                        @if (Model.isLastetProduct)
                        {

                            <span class="new">New</span>
                        }
                    </div>
                    <div class="product-info text-center clearfix">
                        <span class="product-title">@pro.Name</span>
                        <div class="price">
                            <ins>
                                <span class="amount">$ @pro.Price</span>
                            </ins>
                        </div>

                    </div>
                    <div class="add-to-cart text-center">
                        <a href="#">ADD TO CART</a>
                    </div>
                    <a href="#" class="like"><i class="fa fa-heart-o"></i></a>
                </li>
            }



